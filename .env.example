# ==============================================
# Alloy Voice Assistant - Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# ==============================================
# OpenAI API Configuration
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Alternative: Azure OpenAI
# OPENAI_BASE_URL=https://your-resource.openai.azure.com/
# OPENAI_MODEL=gpt-4-vision

# Alternative: Local LLM (Ollama)
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_MODEL=llama3.2-vision
# OPENAI_API_KEY=dummy

# ==============================================
# Language Settings
# ==============================================
# Default language on startup: 'ru' (Russian) or 'de' (German)
DEFAULT_LANGUAGE=ru

# ==============================================
# Text-to-Speech (Piper TTS)
# ==============================================
# Paths to Piper ONNX models (relative to project root)
# Download models first! See README.md for instructions

# Russian (Female voice: Irina)
PIPER_MODEL_RU=models/piper/ru/ru_RU/irina/medium/ru_RU-irina-medium.onnx

# German (Female voice: Eva_K)
PIPER_MODEL_DE=models/piper/de/de_DE/eva_k/x_low/de_DE-eva_k-x_low.onnx

# Alternative German voices:
# PIPER_MODEL_DE=models/piper/de/de_DE/thorsten/medium/de_DE-thorsten-medium.onnx  # Male
# PIPER_MODEL_DE=models/piper/de/de_DE/karlsson/low/de_DE-karlsson-low.onnx        # Male, deep

# Disable TTS output (useful for debugging)
# 0 = enabled (default), 1 = disabled
DISABLE_TTS=0

# ==============================================
# Speech-to-Text (Whisper)
# ==============================================
# Whisper model size: 'tiny', 'base', 'small', 'medium', 'large'
# Recommendations:
#   - 'base': Good balance (default)
#   - 'small': Better accuracy, slower
#   - 'medium': Best accuracy, requires more RAM
WHISPER_MODEL=base

# ==============================================
# Hardware Configuration
# ==============================================
# Webcam index (0 = default camera, 1 = external USB camera)
# Run this to find your camera index:
#   python -c "import cv2; [print(f'{i}: Available') for i in range(10) if cv2.VideoCapture(i).isOpened()]"
CAMERA_INDEX=0

# Audio output device index (for TTS playback)
# Run this to find your audio devices:
#   python list_audio_devices.py
# Leave empty to use system default
AUDIO_OUTPUT_DEVICE=

# ==============================================
# Advanced Settings (Optional)
# ==============================================
# Agent maximum iterations (prevent infinite loops)
AGENT_MAX_ITERATIONS=5

# Agent verbosity (for debugging)
# 0 = quiet, 1 = verbose (default)
AGENT_VERBOSE=1

# ==============================================
# Tool Configuration (Optional)
# ==============================================
# Weather API language (for wttr.in)
# 'ru' = Russian, 'de' = German, 'en' = English
WEATHER_LANG=ru

# Web search results limit (per query)
WEB_SEARCH_MAX_RESULTS=3

# ==============================================
# Logging & Debugging (Optional)
# ==============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Save chat history to file
# 0 = disabled (default), 1 = enabled
SAVE_CHAT_HISTORY=0
CHAT_HISTORY_FILE=chat_history.json